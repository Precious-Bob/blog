<div class="author">
  <h1 class="author__heading">Hi, I'm Precious.</h1>
  <p class="author__body">Web developer and content writer.</p>
</div>

<img
  src="/img/precious-headshot.jpg"
  alt="precious-headshot"
  class="hero-image"
  width="981"
  height="528"
/>

<section class="articles">
  <h2 class="articles__heading">Latest Posts</h2>

  <ul class="article-ul">
    <% data.forEach(post => { %>
      <li>
        <a href="/post/<%= post._id %>">
          <span><%= post.title %></span>
          <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
        </a>
      </li>
    <% }) %>
  </ul>
 <!-- write a slug insetead of the id -->

  <% if (nextPage !== null) { %>
    <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
  <% } %>
</section>
